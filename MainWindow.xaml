<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="RSSN.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RSSN"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="随机抽取学号"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Grid>
            <Grid
                x:Name="AppTitleBar"
                Height="48"
                Margin="0,0,0,0"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Width="26"
                    Height="26"
                    Margin="7,7,0,7"
                    HorizontalAlignment="Left"
                    Source="ms-appx:///Assets/RSSN_Logos/Square44x44Logo.altform-lightunplated_targetsize-48.png" />
                <TextBlock
                    x:Name="AppTitleTextBlock_1"
                    Margin="40,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource HarmonyOSSans}"
                    FontSize="14"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="随机抽取学号 2024" />
                <TextBlock
                    x:Name="AppTitleTextBlock_2"
                    Grid.ColumnSpan="2"
                    Width="136"
                    Height="17"
                    Margin="40,25,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource HarmonyOSSans}"
                    FontSize="8"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Randomly Select Student Numbers" />
            </Grid>
            <HyperlinkButton
                x:Name="ClassNameHyperlinkButton"
                Grid.Column="0"
                Width="Auto"
                Height="36"
                Margin="175,2,0,2"
                VerticalAlignment="Top"
                x:FieldModifier="public"
                BorderBrush="{ThemeResource SystemAccentColorDark2}"
                BorderThickness="2"
                Click="ClassNameHyperlinkButton_Click"
                Content="我的班级"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16" />
        </Grid>
        <Frame
            x:Name="ContentFrame"
            Grid.Row="0"
            Margin="70,45,0,0"
            x:FieldModifier="public"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="8,0,0,0">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition />
                </TransitionCollection>
            </Frame.ContentTransitions>

        </Frame>
    </Grid>
</Window>
